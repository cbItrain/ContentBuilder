<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/halo" xmlns:s="library://ns.adobe.com/flex/spark">
	
	<fx:Metadata>
		[HostComponent("spark.components.SkinnableContainer")]
	</fx:Metadata> 
	<fx:Declarations>
	</fx:Declarations>
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- Define the content area of the container. -->
	<s:Scroller left="0" top="0" right="0" bottom="0" id="scroller" focusEnabled="false" verticalScrollPolicy="auto" horizontalScrollPolicy="off">
		<s:Group id="contentGroup" 
				 left="0" right="0" top="0" bottom="0">
			<s:layout>
				<s:VerticalLayout clipAndEnableScrolling="true"/>
			</s:layout>
		</s:Group>      
	</s:Scroller>  
</s:Skin>