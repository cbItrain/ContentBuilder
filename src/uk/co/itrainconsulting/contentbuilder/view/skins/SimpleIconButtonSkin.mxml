<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
			 xmlns:s="library://ns.adobe.com/flex/spark" 
			 xmlns:mx="library://ns.adobe.com/flex/mx" 
			 minHeight="25"
			 alpha.disabled="0.5">
	<fx:Metadata> 
		[HostComponent("uk.co.itrainconsulting.contentbuilder.view.baseComponents.SimpleIconButton")] 
	</fx:Metadata>    
	<fx:Script> 
		<![CDATA[         
			import uk.co.itrainconsulting.contentbuilder.view.baseComponents.SimpleIconButton;
		]]>        
	</fx:Script> 
	
	<s:states> 
		<s:State name="up" /> 
		<s:State name="over" /> 
		<s:State name="down" /> 
		<s:State name="disabled" /> 
	</s:states>
	<s:Rect radiusX="0" radiusY="0"
			height="100%" 
			width="100%"
			topLeftRadiusX="{hostComponent.topLeftCornerRadius}"
			topLeftRadiusY="{hostComponent.topLeftCornerRadius}"
			topRightRadiusX="{hostComponent.topRightCornerRadius}"
			topRightRadiusY="{hostComponent.topRightCornerRadius}"
			bottomLeftRadiusX="{hostComponent.bottomLeftCornerRadius}"
			bottomLeftRadiusY="{hostComponent.bottomLeftCornerRadius}"
			bottomRightRadiusX="{hostComponent.bottomRightCornerRadius}"
			bottomRightRadiusY="{hostComponent.bottomRightCornerRadius}"
			includeIn="up">
		<s:stroke>
			<s:SolidColorStroke color="#B4B4B4" alpha="1"/>
		</s:stroke> 
		<s:fill> 
			<s:LinearGradient rotation="90"> 
				<s:entries>  
					<s:GradientEntry ratio="0" alpha="1" color="#FCFCFC"/>
					<s:GradientEntry ratio="1" alpha="1" color="#E1E1E1"/>
				</s:entries> 
			</s:LinearGradient> 
		</s:fill> 
	</s:Rect>
	<s:Rect radiusX="0" 
			radiusY="0" 
			height="100%" 
			width="100%" 
			topLeftRadiusX="{hostComponent.topLeftCornerRadius}"
			topLeftRadiusY="{hostComponent.topLeftCornerRadius}"
			topRightRadiusX="{hostComponent.topRightCornerRadius}"
			topRightRadiusY="{hostComponent.topRightCornerRadius}"
			bottomLeftRadiusX="{hostComponent.bottomLeftCornerRadius}"
			bottomLeftRadiusY="{hostComponent.bottomLeftCornerRadius}"
			bottomRightRadiusX="{hostComponent.bottomRightCornerRadius}"
			bottomRightRadiusY="{hostComponent.bottomRightCornerRadius}"
			includeIn="over">
		<s:stroke>
			<s:SolidColorStroke color="#B4B4B4" alpha="1"/>
		</s:stroke> 
		<s:fill> 
			<s:LinearGradient rotation="90"> 
				<s:entries>  
					<s:GradientEntry ratio="0" alpha="1" color="#FCFCFC"/>
					<s:GradientEntry ratio="1" alpha="1" color="#F8F8F8"/>
				</s:entries> 
			</s:LinearGradient> 
		</s:fill> 
	</s:Rect>
	<s:Rect radiusX="0" 
			radiusY="0" 
			height="100%" 
			width="100%" 
			topLeftRadiusX="{hostComponent.topLeftCornerRadius}"
			topLeftRadiusY="{hostComponent.topLeftCornerRadius}"
			topRightRadiusX="{hostComponent.topRightCornerRadius}"
			topRightRadiusY="{hostComponent.topRightCornerRadius}"
			bottomLeftRadiusX="{hostComponent.bottomLeftCornerRadius}"
			bottomLeftRadiusY="{hostComponent.bottomLeftCornerRadius}"
			bottomRightRadiusX="{hostComponent.bottomRightCornerRadius}"
			bottomRightRadiusY="{hostComponent.bottomRightCornerRadius}"
			includeIn="down">
		<s:stroke>
			<s:SolidColorStroke color="#B4B4B4" alpha="1"/>
		</s:stroke> 
		<s:fill> 
			<s:LinearGradient rotation="90"> 
				<s:entries>  
					<s:GradientEntry ratio="0" alpha="1" color="#C5C5C5"/>
					<s:GradientEntry ratio="0.1" alpha="1" color="#E0E0E0"/>
					<s:GradientEntry ratio="1" alpha="1" color="#C9C9C9"/>
				</s:entries> 
			</s:LinearGradient> 
		</s:fill> 
	</s:Rect>
	<s:Rect radiusX="0" 
			radiusY="0" 
			height="100%" 
			width="100%"
			topLeftRadiusX="{hostComponent.topLeftCornerRadius}"
			topLeftRadiusY="{hostComponent.topLeftCornerRadius}"
			topRightRadiusX="{hostComponent.topRightCornerRadius}"
			topRightRadiusY="{hostComponent.topRightCornerRadius}"
			bottomLeftRadiusX="{hostComponent.bottomLeftCornerRadius}"
			bottomLeftRadiusY="{hostComponent.bottomLeftCornerRadius}"
			bottomRightRadiusX="{hostComponent.bottomRightCornerRadius}"
			bottomRightRadiusY="{hostComponent.bottomRightCornerRadius}"
			includeIn="disabled">
		<s:stroke>
			<s:SolidColorStroke color="#B4B4B4" alpha="1"/>
		</s:stroke> 
		<s:fill> 
			<s:LinearGradient rotation="90"> 
				<s:entries>  
					<s:GradientEntry ratio="0" alpha="1" color="#FCFCFC"/>
					<s:GradientEntry ratio="1" alpha="1" color="#E1E1E1"/>
				</s:entries> 
			</s:LinearGradient> 
		</s:fill> 
	</s:Rect>
	<s:HGroup id="layoutContainer" 
			  width="100%" 
			  height="100%" 
			  verticalAlign="middle" 
			  horizontalAlign="center"
			  gap="2">
		<s:BitmapImage id="icon" source="{hostComponent.icon}"/>
		<s:Label id="labelDisplay" color="0x333333"
				 textAlign="center"
				 includeInLayout="{hostComponent.label != null &amp;&amp; hostComponent.label !=''}"
				 visible="{hostComponent.label != null &amp;&amp; hostComponent.label !=''}"
				 lineBreak="toFit">
		</s:Label>
	</s:HGroup>
	
</s:SparkSkin>
